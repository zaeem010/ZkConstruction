@model ZkConstruction.ViewModel.SubSec_VM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
            <div id="mydiv" class="col-md-3">
                <p class="bg-success text-center">@TempData["Insert"]</p>
                <p class="bg-danger">@TempData["Duplicate"]</p>
            </div>
        </div>
        <div class="col-lg-12">
            <a asp-action="Index" asp-controller="SubSection" class="btn btn-skype offset-lg-10"><i class="fa fa-list"></i>Sub Section List</a>
            <div class="card" style="margin-top:20px">
                <div class="card-header">
                    <h5 class="card-header-text"><u>Sub Section Form</u></h5>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("save", "SubSection", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <span id="uname_response"></span>
                            <div class="col-md-6">
                                <label><b>Select Section</b></label>
                                <select class="form-control chosen-select" asp-for="Subsection.Sectionid">
                                    <option value="">Select Section</option>
                                    @foreach (var lst in Model.SectionList)
                                    {
                                        <option value="@lst.id">@lst.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label><b>Sub Section Name</b></label>
                                <input type="text" asp-for="Subsection.Name" class="form-control" value="@Model.Subsection.Name" />
                            </div>
                            <div class="offset-md-4 col-md-6 " style="margin-top:20px">
                                @if (Model.Subsection.id == 0)
                                {
                                    <button type="submit" class="btn btn-primary pull-right col-md-8" onclick="return confirm('Do you want to Save ..')" style="margin-top:0px"><i class="fa fa-plus"></i> Save </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary pull-right col-md-8" onclick="return confirm('Do you want to Update ..')" style="margin-top:0px"><i class="fa fa-plus"></i> Update </button>
                                }

                            </div>
                            @Html.HiddenFor(m => m.Subsection.id)
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    $('.chosen-select').chosen();
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>
