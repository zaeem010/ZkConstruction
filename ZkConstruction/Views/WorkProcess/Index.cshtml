@model List<ZkConstruction.ViewModelQuery.DailysheduleVMQ>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sr = 0;
}
<div class="content-wrapper">
    @*Container-fluid starts
        Main content starts*@
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
            <div id="mydiv" class="col-md-3">
                <p class="bg-success text-center">@TempData["update"]</p>
                <p class="bg-danger text-center">@TempData["Delete"]</p>
            </div>
        </div>
        <div class="col-lg-12">
            @*<a asp-action="Create" asp-controller="DailyShedule" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>Create New</a>*@
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Daily Shedule Projects</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="table1" class="table dt-responsive table-striped">
                                    <thead>
                                        <tr>
                                            <th>Sr#</th>
                                            <th>Project Name</th>
                                            <th>Site</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var lst in Model)
                                        {
                                            <tr>
                                                <td style="width:50px;">@{sr++;}@sr</td>
                                                <td style="width:100px;">@lst.ProjectName</td>
                                                <td style="width:100px;">@lst.SiteName</td>
                                                <td style="width:100px;">@lst.Date</td>
                                                <td style="width:30px; text-align:center;">
                                                    <a href="@Url.Action("Report", new { id = lst.Sheduleid })" target="_blank" class="badge badge-warning" data-toggle="tooltip" data-placement="left" title="Click Me To View Report"><i class="fa fa-angle-double-right"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Main content ends
        Container-fluid ends*@
</div>
<script>
    $('.chosen-select').chosen();
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
    //start
    $(document).ready(function () {
        var table1 = $('#table1').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
        });
    });
</script>