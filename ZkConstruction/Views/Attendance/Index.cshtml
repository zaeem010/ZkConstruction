@model List<ZkConstruction.ViewModelQuery.AttendanceVMQ>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
        int sr = 0;
    }
    <div class="content-wrapper">

        <!-- Container-fluid starts -->
        <!-- Main content starts -->
        <div class="container-fluid">
            <div class="row">
                <div class="main-header">
                </div>
                <div id="mydiv" class="col-md-3">
                    <p class="bg-success text-center">@TempData["update"]</p>
                    <p class="bg-danger text-center">@TempData["Delete"]</p>
                </div>
            </div>
            <div class="col-lg-12">
                <a asp-action="Create" asp-controller="Attendance" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>Create New</a>
                <div class="card" style="margin-top:20px">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-header-text"><u>Attendance Tables</u></h5>
                                </div>
                                <div class="card-block">
                                    <table id="table1" class="table table-striped table-bordered" style="overflow-x:auto">
                                        <thead>
                                            <tr>
                                                <th>Sr#</th>
                                                <th>Employee Name</th>
                                                <th>Date</th>
                                                <th>Time</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var lst in Model)
                                            {
                                                <tr>
                                                    <td style="width:50px;">@{sr++;}@sr</td>
                                                    <td>@lst.Name</td>
                                                    <td>@lst.CheckInOut.ToString("yyyy-MMM-dd")</td>
                                                    <td>@lst.CheckInOut.ToString("hh:mm tt")</td>
                                                    <td>@lst.Status</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main content ends -->
        <!-- Container-fluid ends -->
    </div>
    <script>
    $('.chosen-select').chosen();
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
    //start
    $(document).ready(function () {
        var table1 = $('#table1').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
        });
    });
    </script>
