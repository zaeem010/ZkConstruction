@model ZkConstruction.ViewModel.WorkSheetVM
@{
    ViewData["Title"] = "Creates";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
            <div id="mydiv" class="col-md-3">
                <p class="bg-success text-center">@TempData["Insert"]</p>
                <p class="bg-danger">@TempData["Duplicate"]</p>
            </div>
        </div>
        <div class="col-lg-12">
            <a asp-action="Index" asp-controller="Worksheet" class="btn btn-skype offset-lg-10"><i class="fa fa-list"></i> Work Sheets</a>
            <div class="card" style="margin-top:20px">
                <div class="card-header">
                    <h5 class="card-header-text"><u>Project Form</u></h5>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("Save", "WorkSheet", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="WorkSheet.id" value="@Model.WorkSheet.id" />
                        <div class="row">
                            <div class="col-md-4">
                                <label>Date</label>
                                <input type="date" asp-for="WorkSheet.Date" value="@Model.WorkSheet.Date" class="form-control" required />
                            </div>
                            <div class="col-md-4">
                                <label><b>Select Project</b></label>
                                <select asp-for="WorkSheet.Proid" class="form-control chosen-select" asp-items="@(new SelectList(Model.ProjectList,"Proid","Name"))">
                                    <option disabled selected>Select</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label><b>Site</b></label>
                                <select class="form-control chosen-select" asp-for="WorkSheet.Siteid">
                                    <option selected disabled>Select</option>
                                    @foreach (var lst in Model.SiteList)
                                    {
                                        <option value="@lst.id">@lst.Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-4 top">
                                <label>Nom De l'Entreprise</label>
                                <input type="text" asp-for="WorkSheet.CompanyName" class="form-control" value="@Model.WorkSheet.CompanyName" />
                            </div>
                            <div class="col-md-4 top">
                                <label>ADRESSE DU CHANTIER</label>
                                <input type="text" asp-for="WorkSheet.SiteAddress" class="form-control" value="@Model.WorkSheet.SiteAddress" />
                            </div>
                            <div class="col-md-4 top">
                                <label>Etage/Coté/PAV</label>
                                <input type="text" asp-for="WorkSheet.FloorSide" class="form-control" value="@Model.WorkSheet.FloorSide" />
                            </div>
                            <div class="col-md-4 top">
                                <label>No Cde Prestaire</label>
                                <input type="text" asp-for="WorkSheet.ProviderOrderNo" class="form-control" value="@Model.WorkSheet.ProviderOrderNo" />
                            </div>
                            <div class="col-md-4 top">
                                <label>No De Logement</label>
                                <input type="text" asp-for="WorkSheet.AccoummodationNo" class="form-control" value="@Model.WorkSheet.AccoummodationNo" />
                            </div>
                        </div>
                        <br />
                        <hr />
                        <h3 class="text-center">SOLS</h3>
                        <div class="row text-center">
                            <div class="col-md-12">
                                <table id="" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>PIECES</th>
                                            <th>NOVIBAT</th>
                                            <th>MODUL'UP</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>ENTRÉE</td>
                                            <td><input type="text" asp-for="WorkSheet.EntranceNovi" class="form-control" value="@Model.WorkSheet.EntranceNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.EntranceMod" class="form-control" value="@Model.WorkSheet.EntranceMod" /></td>
                                        </tr>
                                        <tr>
                                            <td>DEGAGEMENT</td>
                                            <td><input type="text" asp-for="WorkSheet.ClearenceNovi" class="form-control" value="@Model.WorkSheet.ClearenceNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.ClearenceModi" class="form-control" value="@Model.WorkSheet.ClearenceModi" /></td>
                                        </tr>
                                        <tr>
                                            <td>SEJOUR CHAMBRE INCORPOREE</td>
                                            <td><input type="text" asp-for="WorkSheet.BedNovi" class="form-control" value="@Model.WorkSheet.BedNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.BedMod" class="form-control" value="@Model.WorkSheet.BedMod" /></td>
                                        </tr>
                                        <tr>
                                            <td>CHAMBRE 1</td>
                                            <td><input type="text" asp-for="WorkSheet.Room1Novi" class="form-control" value="@Model.WorkSheet.Room1Novi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.Room1Mod" class="form-control" value="@Model.WorkSheet.Room1Mod" /></td>
                                        </tr>
                                        <tr>
                                            <td>CHAMBRE 2</td>
                                            <td><input type="text" asp-for="WorkSheet.Room2Novi" class="form-control" value="@Model.WorkSheet.Room2Novi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.Room2Mod" class="form-control" value="@Model.WorkSheet.Room2Mod" /></td>
                                        </tr>
                                        <tr>
                                            <td>CELLIER/PIECE NOIRE</td>
                                            <td><input type="text" asp-for="WorkSheet.CellarNovi" class="form-control" value="@Model.WorkSheet.CellarNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.CellarMod" class="form-control" value="@Model.WorkSheet.CellarMod" /></td>
                                        </tr>
                                        <tr>
                                            <td>CUISINE</td>
                                            <td><input type="text" asp-for="WorkSheet.CookNovi" class="form-control" value="@Model.WorkSheet.CookNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.CookMod" class="form-control" value="@Model.WorkSheet.CookMod" /></td>
                                        </tr>
                                        <tr>
                                            <td>SALLE DE BAIN</td>
                                            <td><input type="text" asp-for="WorkSheet.RoomBathNovi" class="form-control" value="@Model.WorkSheet.RoomBathNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.RoomBathMod" class="form-control" value="@Model.WorkSheet.RoomBathMod" /></td>
                                        </tr>
                                        <tr>
                                            <td>CABINET DE TOILETTE</td>
                                            <td><input type="text" asp-for="WorkSheet.FirmToiletNovi" class="form-control" value="@Model.WorkSheet.FirmToiletNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.FirmToiletMod" class="form-control" value="@Model.WorkSheet.FirmToiletMod" /></td>
                                        </tr>
                                        <tr>
                                            <td>WC</td>
                                            <td><input type="text" asp-for="WorkSheet.WCNovi" class="form-control" value="@Model.WorkSheet.WCNovi" /></td>
                                            <td><input type="text" asp-for="WorkSheet.WCMod" class="form-control" value="@Model.WorkSheet.WCMod" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row top">
                            <div class="col-md-4">
                                <label>Plinthe Bois 5cm</label>
                                <input type="text" asp-for="WorkSheet.WoodPlinth5" class="form-control" value="@Model.WorkSheet.WoodPlinth5" />
                            </div>
                            <div class="col-md-4">
                                <label>Plinthe Bois 10cm</label>
                                <input type="text" asp-for="WorkSheet.WoodPlinth10" class="form-control" value="@Model.WorkSheet.WoodPlinth10" />
                            </div>
                            <div class="col-md-4">
                                <label>Ragréage 1 Sac / 5m² (Hors Chutes)</label>
                                <input type="text" asp-for="WorkSheet.LevelCompund" class="form-control" value="@Model.WorkSheet.LevelCompund" />
                            </div>
                            <div class="col-md-4 top">
                                <label>SILICONE Sanitaire Blanc</label>
                                <input type="text" asp-for="WorkSheet.SILICONE" class="form-control" value="@Model.WorkSheet.SILICONE" />
                            </div>
                            <div class="col-md-4 top">
                                <label>A Préparer Pour Le: (env.24h)</label>
                                <input type="text" asp-for="WorkSheet.Deatil1" class="form-control" value="@Model.WorkSheet.Deatil1" />
                            </div>
                            <div class="col-md-4 top">
                                <label>Visa Service EDL</label>
                                <input type="text" asp-for="WorkSheet.EDL" class="form-control" value="@Model.WorkSheet.EDL" />
                            </div>
                        </div>
                        <div class="offset-md-4 col-md-6 " style="margin-top:20px">
                            @if (Model.WorkSheet.id == 0)
                            {
                                <button type="submit" class="btn btn-primary pull-right col-md-8" onclick="return confirm('Do you want to Save ..')" style="margin-top:0px"><i class="fa fa-plus"></i> Save </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary pull-right col-md-8" onclick="return confirm('Do you want to Update ..')" style="margin-top:0px"><i class="fa fa-plus"></i> Update </button>
                            }

                        </div>


                    }
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    $('.chosen-select').chosen();
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
    $(document).ready(function () {
        var now = new Date();
        var month = (now.getMonth() + 1);
        var day = now.getDate();
        if (month < 10)
            month = "0" + month;
        if (day < 10)
            day = "0" + day;
        var today = now.getFullYear() + '-' + month + '-' + day;
        $('#date').val(today);
        $('#dates').val(today);
    });
</script>